<h1>Lista de Contatos</h1>

<table>
  <thead>
    <tr>
      <th>Nome</th>
      <th>Email</th>
      <th>Usuário</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @contacts.each do |contact| %>
      <tr>
        <td><%= contact.name %></td>
        <td><%= contact.mail %></td>
        <td align="center"><%= contact.usr.name %></td>
		<td><%= link_to 'Consultar', contact %></td>
		
		<% if current_usr.id == contact.usr_id%>
			<td><%= link_to 'Editar', edit_contact_path(contact) %></td>
		<% else %>
			<td><%= "Editar" %></td>
		<% end %>
		
      </tr>
    <% end %>
  </tbody>
</table>

