<%= form_for(Usr.new, url: login_path) do |f| %>

  <% if alert %>
	<p class="alert alert-error">
		<%= alert =%>
	</p>
  <% end %>

  <div class="field">
    <%= f.label :login %><br>
    <%= f.text_field :login %>
  </div>
  <div class="field">
    <%= f.label :password %><br>
    <%= f.password_field :password %>
  </div>
  <div class="actions">
    <%= f.submit "Login" %>
  </div>
<% end %>
