<p id="notice"><%= notice %></p>

<h1>Lista de Usuários</h1>

<table>
  <thead>
    <tr>
      <th>Nome</th>
      <th>Login</th>
	  <th>Qte Campos Customizados</th>
	  <th>Qte Contatos Cadastrados</th>
      <th colspan="3">Ações</th>
    </tr>
  </thead>

  <tbody>
    <% @usrs.each do |usr| %>
      <tr>
        <td><%= usr.name %></td>
        <td align="center"><%= usr.login %></td>
		<td align="center"><%= pluralize(usr.custom_field.size, "custom_field") %></td>
		<td align="center"><%= pluralize(usr.contact.size, "contact") %></td>
        <td align="center"><%= link_to 'Consultar', usr %></td>
		
		<% if current_usr.id == usr.id || (current_usr.login == "admin") %>
			<td align="center"><%= link_to 'Editar', edit_usr_path(usr) %></td>
		<% else %>
			<td><%= "Editar" %></td>
		<% end %>
		
      </tr>
    <% end %>
  </tbody>
</table>

